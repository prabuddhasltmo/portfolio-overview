{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "rootDir": ".",
    "outDir": "./dist-tools",
    "types": ["node"]
  },
  "include": ["lib/**/*.ts", "mcp/**/*.ts"],
  "exclude": ["node_modules"]
}
